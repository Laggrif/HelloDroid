<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloDroidActivity">

    <Button
        android:id="@+id/red_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/default_button"
        android:text="@string/default_button_text"
        android:textColor="@color/button_text_color"
        app:iconPadding="1dp"
        app:layout_constraintEnd_toEndOf="@+id/blue_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/blue_button"
        app:layout_constraintTop_toBottomOf="@+id/blue_button"
        app:strokeColor="@color/stroke_color" />

    <Button
        android:id="@+id/red_button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/default_button"
        android:text="@string/default_button_text"
        android:textColor="@color/button_text_color"
        app:iconPadding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/green_button"
        app:layout_constraintTop_toTopOf="@+id/red_button5"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/stroke_color" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/green"
        android:text="@string/green_button_text"
        android:textColor="@color/button_text_color"
        app:iconPadding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/blue_button"
        app:layout_constraintTop_toTopOf="@+id/blue_button" />

    <Button
        android:id="@+id/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:text="@string/blue_button_text"
        android:textColor="@color/button_text_color"
        app:iconPadding="1dp"
        app:layout_constraintEnd_toEndOf="@+id/droidImage"
        app:layout_constraintStart_toStartOf="@+id/droidImage"
        app:layout_constraintTop_toBottomOf="@+id/clickCounter"
        app:strokeColor="@color/stroke_color" />

    <ImageView
        android:id="@+id/droidImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/hellodroid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/clickCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="@string/welcome_text"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="@+id/droidImage"
        app:layout_constraintStart_toStartOf="@+id/droidImage"
        app:layout_constraintTop_toBottomOf="@+id/droidImage" />

    <Button
        android:id="@+id/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/red"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/red_button_text"
        android:textColor="@color/button_text_color"
        app:iconPadding="1dp"
        app:layout_constraintEnd_toStartOf="@+id/blue_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blue_button"
        app:strokeColor="@color/stroke_color" />

    <Button
        android:id="@+id/red_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/default_button"
        android:text="@string/default_button_text"
        android:textColor="@color/button_text_color"
        app:iconPadding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/red_button"
        app:layout_constraintTop_toTopOf="@+id/red_button5"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/stroke_color" />

</androidx.constraintlayout.widget.ConstraintLayout>